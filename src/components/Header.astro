---
import { MobileNav } from "./MobileNav";
import { NavigationDropdown } from "./NavigationDropdown";
import { Badge } from "./ui/badge";
import { Button } from "./ui/button";
import { Input } from "./ui/input";

const clothingItems = [
	{ label: "Mens", href: "/clothing/mens" },
	{ label: "Womens", href: "/clothing/womens" },
	{ label: "Kids", href: "/clothing/kids" },
	{ label: "Babies", href: "/clothing/babies" },
];

const accessoriesItems = [
	{ label: "Fashion Accessories", href: "/accessories/fashion" },
	{ label: "Utility Accessories", href: "/accessories/utility" },
];

const bagsFootwearItems = [
	{ label: "Bags", href: "/bags-footwear/bags" },
	{ label: "Footwear", href: "/bags-footwear/footwear" },
	{ label: "Travel Luggage", href: "/bags-footwear/travel" },
];

const homeKitchenItems = [
	{ label: "Home Essentials", href: "/home-kitchen/home" },
	{ label: "Kitchen & Dining", href: "/home-kitchen/kitchen" },
];
---

<header class="sticky top-0 z-50 bg-white shadow-lg border-b border-border">
	<div
		class="bg-gradient-to-r from-slate-800 to-slate-900 text-white text-sm py-2"
	>
		<div class="container mx-auto px-4 text-center">
			<i class="fas fa-shipping-fast mr-2"></i>
			Free shipping on orders over $200 | Fast worldwide delivery
		</div>
	</div>

	<div class="container mx-auto px-4">
		<div class="flex items-center justify-between py-4">
			<!-- Mobile Navigation -->
			<div class="flex items-center space-x-2 md:hidden">
				<MobileNav
					clothingItems={clothingItems}
					accessoriesItems={accessoriesItems}
					bagsFootwearItems={bagsFootwearItems}
					homeKitchenItems={homeKitchenItems}
					client:load
				/>
			</div>

			<!-- Logo -->
			<a href="/" class="flex items-center space-x-2">
				<div
					class="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-2 rounded-lg"
				>
					<i class="fas fa-store text-xl"></i>
				</div>
				<span
					class="text-xl md:text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"
				>
					ShopVerse
				</span>
			</a>

			<!-- Search Bar (Desktop) -->
			<div class="hidden lg:flex flex-1 max-w-2xl mx-8">
				<div class="relative w-full">
					<Input
						type="text"
						className="w-full px-4 py-3 pr-12 border-2 border-gray-200 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent shadow-sm"
						placeholder="Search for products, categories, or brands..."
					/>
					<Button
						size="sm"
						className="absolute right-1 top-1/2 transform -translate-y-1/2 p-2 rounded-full bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white"
					>
						<i class="fas fa-search"></i>
					</Button>
				</div>
			</div>

			<!-- Header Actions -->
			<div class="flex items-center space-x-2 md:space-x-6">
				<Button
					variant="ghost"
					className="hidden lg:flex items-center space-x-2 text-gray-600 hover:text-blue-600 transition-colors"
				>
					<i class="fas fa-user text-lg"></i>
					<span class="font-medium">Account</span>
				</Button>
				<Button
					variant="ghost"
					className="hidden md:flex items-center space-x-2 text-gray-600 hover:text-red-500 transition-colors"
				>
					<i class="fas fa-heart text-lg"></i>
					<span class="font-medium hidden lg:inline">Wishlist</span>
				</Button>
				<Button
					variant="ghost"
					className="flex items-center space-x-2 text-gray-600 hover:text-blue-600 transition-colors relative"
				>
					<i class="fas fa-shopping-cart text-lg"></i>
					<span class="hidden sm:inline font-medium">Cart</span>
					<Badge
						variant="destructive"
						className="absolute -top-2 -right-2 h-5 w-5 rounded-full p-0 flex items-center justify-center text-xs"
					>
						0
					</Badge>
				</Button>
			</div>
		</div>
	</div>

	<!-- Desktop Navigation -->
	<nav class="hidden md:block border-t border-gray-200 bg-gray-50">
		<div class="container mx-auto px-4">
			<ul
				class="flex items-center justify-center space-x-8 lg:space-x-12 py-4"
			>
				<li>
					<NavigationDropdown
						title="Clothing"
						icon="fas fa-tshirt"
						items={clothingItems}
						client:load
					/>
				</li>
				<li>
					<NavigationDropdown
						title="Accessories"
						icon="fas fa-ring"
						items={accessoriesItems}
						client:load
					/>
				</li>
				<li>
					<NavigationDropdown
						title="Bags & Footwear"
						icon="fas fa-shopping-bag"
						items={bagsFootwearItems}
						client:load
					/>
				</li>
				<li>
					<NavigationDropdown
						title="Home & Kitchen"
						icon="fas fa-home"
						items={homeKitchenItems}
						client:load
					/>
				</li>
				<li>
					<a
						href="/corporate-gifting"
						class="text-gray-700 hover:text-purple-600 transition-colors font-semibold flex items-center space-x-1 p-2 cursor-pointer"
					>
						<i class="fas fa-briefcase text-sm"></i>
						<span>Corporate Gifting</span>
					</a>
				</li>
			</ul>
		</div>
	</nav>
</header>
