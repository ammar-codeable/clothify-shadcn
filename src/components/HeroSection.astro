---
import { Button } from "./ui/button";
import { Card } from "./ui/card";
---

<section class="bg-gradient-to-br from-slate-50 to-white py-12 lg:py-20">
	<div class="container mx-auto px-4">
		<div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center">
			<!-- Content -->
			<div class="space-y-6">
				<div class="space-y-6">
					<div
						class="inline-flex items-center gap-2 bg-primary/10 text-primary px-4 py-2 rounded-full text-sm font-medium"
					>
						<svg
							class="w-4 h-4"
							fill="currentColor"
							viewBox="0 0 20 20"
						>
							<path
								d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
							></path>
						</svg>
						Trusted by 500+ Fashion Retailers
					</div>

					<h1
						class="text-5xl lg:text-7xl font-bold text-gray-900 leading-tight"
					>
						Premium
						<span class="text-primary block">Fashion Supply</span>
						<span class="text-gray-600 text-4xl lg:text-5xl"
							>for Modern Brands</span
						>
					</h1>

					<p class="text-xl text-gray-600 leading-relaxed max-w-lg">
						Source high-quality apparel from verified manufacturers.
						Fast delivery, competitive pricing, and dedicated
						support for your business growth.
					</p>
				</div>

				<!-- Stats -->
				<div class="flex gap-6 py-4">
					<div>
						<div class="text-3xl font-bold text-gray-900">10K+</div>
						<div class="text-gray-600">Products</div>
					</div>
					<div class="h-12 w-px bg-gray-200"></div>
					<div>
						<div class="text-3xl font-bold text-gray-900">24h</div>
						<div class="text-gray-600">Processing</div>
					</div>
					<div class="h-12 w-px bg-gray-200"></div>
					<div>
						<div class="text-3xl font-bold text-gray-900">98%</div>
						<div class="text-gray-600">Satisfaction</div>
					</div>
				</div>

				<!-- CTA Buttons -->
				<div class="flex flex-col sm:flex-row gap-3">
					<Button
						size="lg"
						className="bg-primary hover:bg-primary/90 text-white px-6 py-3 text-base"
					>
						Start Sourcing
						<svg
							class="ml-2 w-5 h-5"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
						</svg>
					</Button>
					<Button
						variant="outline"
						size="lg"
						className="border-2 px-6 py-3 text-base"
					>
						<svg
							class="mr-2 w-5 h-5"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
							></path>
						</svg>
						Download Catalog
					</Button>
				</div>
			</div>

			<!-- Visual -->
			<div class="relative">
				<div class="grid grid-cols-2 gap-3">
					<div class="space-y-3">
						<Card className="overflow-hidden h-40 p-0">
							<img
								src="https://images.unsplash.com/photo-1515886657613-9f3515b0c78f?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80"
								alt="Fashion Item 1"
								class="w-full h-full object-cover"
							/>
						</Card>
						<Card className="overflow-hidden h-28 p-0">
							<img
								src="https://images.unsplash.com/photo-1434389677669-e08b4cac3105?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80"
								alt="Fashion Item 2"
								class="w-full h-full object-cover"
							/>
						</Card>
						<Card className="overflow-hidden h-24 p-0">
							<img
								src="https://images.unsplash.com/photo-1596755094514-f87e34085b2c?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80"
								alt="Fashion Item 5"
								class="w-full h-full object-cover"
							/>
						</Card>
						<Card className="overflow-hidden h-32 p-0">
							<img
								src="https://images.unsplash.com/photo-1469334031218-e382a71b716b?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80"
								alt="Fashion Item 7"
								class="w-full h-full object-cover"
							/>
						</Card>
					</div>
					<div class="space-y-3 pt-6">
						<Card className="overflow-hidden h-28 p-0">
							<img
								src="https://images.unsplash.com/photo-1441986300917-64674bd600d8?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80"
								alt="Fashion Item 3"
								class="w-full h-full object-cover"
							/>
						</Card>
						<Card className="overflow-hidden h-40 p-0">
							<img
								src="https://images.unsplash.com/photo-1542060748-10c28b62716f?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80"
								alt="Fashion Item 4"
								class="w-full h-full object-cover"
							/>
						</Card>
						<Card className="overflow-hidden h-32 p-0">
							<img
								src="https://images.unsplash.com/photo-1509631179647-0177331693ae?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80"
								alt="Fashion Item 6"
								class="w-full h-full object-cover"
							/>
						</Card>
					</div>
				</div>

				<!-- Floating badge -->
				<div
					class="absolute -top-2 -right-2 bg-white shadow-lg rounded-full p-3 border"
				>
					<div class="text-center">
						<div class="text-xl font-bold text-primary">500+</div>
						<div class="text-xs text-gray-600">Happy Clients</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
