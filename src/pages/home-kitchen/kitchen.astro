---
import { FilterableProductGrid } from "../../components/FilterableProductGrid";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import { homeKitchenProducts } from "../../constants";
import Layout from "../../layouts/Layout.astro";

// Filter for kitchen & dining
const kitchenProducts = homeKitchenProducts.filter((product) =>
	["Tableware", "Lunch", "Baking", "Cooking Tools", "Serving"].includes(
		product.category,
	),
);

const kitchenCategories = [
	{ name: "All", count: kitchenProducts.length.toString(), active: true },
	{ name: "Tableware", count: "5", active: false },
	{ name: "Lunch", count: "5", active: false },
	{ name: "Baking", count: "5", active: false },
	{ name: "Cooking Tools", count: "5", active: false },
	{ name: "Serving", count: "5", active: false },
];
---

<Layout title="Kitchen & Dining - ShopVerse">
	<Header />

	<main
		class="min-h-screen bg-gradient-to-br from-yellow-50 via-white to-orange-50"
	>
		<!-- Hero Banner -->
		<section
			class="relative bg-yellow-800 text-white py-20 overflow-hidden"
		>
			<div
				class="absolute inset-0 bg-[repeating-linear-gradient(90deg,_transparent,_transparent_50px,_rgba(255,255,255,0.02)_50px,_rgba(255,255,255,0.02)_100px)]"
			>
			</div>
			<div
				class="absolute inset-0 bg-[radial-gradient(circle_at_25%_75%,_rgba(251,191,36,0.15)_0%,_transparent_70%)]"
			>
			</div>
			<div class="container mx-auto px-4 relative z-10">
				<div class="max-w-4xl mx-auto text-center">
					<div class="flex justify-center mb-6">
						<div
							class="bg-white/5 backdrop-blur-sm rounded-full p-6 border border-white/10"
						>
							<i class="fas fa-utensils text-4xl text-yellow-300"
							></i>
						</div>
					</div>
					<h1 class="text-5xl md:text-7xl font-bold mb-6 text-white">
						Kitchen & Dining
					</h1>
					<p
						class="text-xl md:text-2xl text-yellow-200 mb-8 font-light"
					>
						Equip your kitchen with premium tools and tableware for
						culinary excellence
					</p>
				</div>
			</div>
		</section>

		<!-- Products Section -->
		<section class="py-16">
			<div class="container mx-auto px-4">
				<!-- Section Header -->
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-gray-900 mb-4">
						Culinary Excellence
					</h2>
					<p class="text-lg text-gray-600 max-w-2xl mx-auto">
						From professional cooking tools to elegant tableware,
						everything you need for a perfect dining experience
					</p>
				</div>

				<!-- Filter & Products Grid -->
				<FilterableProductGrid
					allProducts={kitchenProducts}
					categories={kitchenCategories}
					colorScheme="yellow"
					client:load
				/>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
