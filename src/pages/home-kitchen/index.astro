---
import { FilterableProductGrid } from "../../components/FilterableProductGrid";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import { homeKitchenCategories, homeKitchenProducts } from "../../constants";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Home & Kitchen - ShopVerse">
	<Header />

	<main
		class="min-h-screen bg-gradient-to-br from-amber-50 via-white to-yellow-50"
	>
		<!-- Hero Banner -->
		<section class="relative bg-amber-900 text-white py-20 overflow-hidden">
			<div
				class="absolute inset-0 bg-[repeating-linear-gradient(45deg,_transparent,_transparent_40px,_rgba(255,255,255,0.02)_40px,_rgba(255,255,255,0.02)_80px)]"
			>
			</div>
			<div
				class="absolute inset-0 bg-[radial-gradient(circle_at_40%_60%,_rgba(245,158,11,0.12)_0%,_transparent_70%)]"
			>
			</div>
			<!-- Decorative Images -->
			<div
				class="absolute right-10 top-12 w-32 h-32 opacity-15 hidden lg:block"
			>
				<img
					src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?w=200&h=200&fit=crop"
					alt="Home Decor"
					class="w-full h-full object-cover rounded-full border-4 border-white/20"
				/>
			</div>
			<div
				class="absolute left-10 bottom-14 w-28 h-28 opacity-15 hidden lg:block"
			>
				<img
					src="https://images.unsplash.com/photo-1514228742587-6b1558fcf93e?w=200&h=200&fit=crop"
					alt="Kitchen"
					class="w-full h-full object-cover rounded-full border-4 border-white/20"
				/>
			</div>
			<div
				class="absolute right-16 bottom-10 w-20 h-20 opacity-10 hidden lg:block"
			>
				<img
					src="https://images.unsplash.com/photo-1620626011761-996317b8d101?w=200&h=200&fit=crop"
					alt="Bathroom"
					class="w-full h-full object-cover rounded-full border-3 border-white/15"
				/>
			</div>
			<div class="container mx-auto px-4 relative z-10">
				<div class="max-w-4xl mx-auto text-center">
					<div class="flex justify-center mb-6">
						<div
							class="bg-white/5 backdrop-blur-sm rounded-full p-6 border border-white/10"
						>
							<i class="fas fa-home text-4xl text-amber-300"></i>
						</div>
					</div>
					<h1 class="text-5xl md:text-7xl font-bold mb-6 text-white">
						Home & Kitchen
					</h1>
					<p
						class="text-xl md:text-2xl text-amber-200 mb-8 font-light"
					>
						Transform your living spaces with our curated collection
						of home essentials and kitchen must-haves
					</p>
				</div>
			</div>
		</section>

		<!-- Products Section -->
		<section class="py-16">
			<div class="container mx-auto px-4">
				<!-- Section Header -->
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-gray-900 mb-4">
						Lifestyle Essentials
					</h2>
					<p class="text-lg text-gray-600 max-w-2xl mx-auto">
						Create a beautiful and functional home with our
						thoughtfully designed storage solutions, kitchen tools,
						and decor items
					</p>
				</div>

				<!-- Filter & Products Grid -->
				<FilterableProductGrid
					allProducts={homeKitchenProducts}
					categories={homeKitchenCategories}
					colorScheme="amber"
					client:load
				/>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
