---
import { FilterableProductGrid } from "../../components/FilterableProductGrid";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import Layout from "../../layouts/Layout.astro";
import { womensProducts, womensCategories } from "../../constants";
---

<Layout title="Women's Fashion - ShopVerse">
	<Header />

	<main
		class="min-h-screen bg-gradient-to-br from-rose-50 via-white to-pink-50"
	>
		<!-- Hero Banner -->
		<section class="relative bg-rose-900 text-white py-20 overflow-hidden">
			<div
				class="absolute inset-0 bg-[repeating-linear-gradient(45deg,_transparent,_transparent_35px,_rgba(255,255,255,0.02)_35px,_rgba(255,255,255,0.02)_70px)]"
			>
			</div>
			<div
				class="absolute inset-0 bg-[radial-gradient(circle_at_30%_80%,_rgba(236,72,153,0.1)_0%,_transparent_60%)]"
			>
			</div>
			<div class="container mx-auto px-4 relative z-10">
				<div class="max-w-4xl mx-auto text-center">
					<div class="flex justify-center mb-6">
						<div
							class="bg-white/5 backdrop-blur-sm rounded-full p-6 border border-white/10"
						>
							<i class="fas fa-female text-4xl text-pink-400"></i>
						</div>
					</div>
					<h1 class="text-5xl md:text-7xl font-bold mb-6 text-white">
						Women's Collection
					</h1>
					<p
						class="text-xl md:text-2xl text-rose-300 mb-8 font-light"
					>
						Elegance redefined - where timeless beauty meets modern
						sophistication
					</p>
				</div>
			</div>
		</section>

		<!-- Products Section -->
		<section class="py-16">
			<div class="container mx-auto px-4">
				<!-- Section Header -->
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-gray-900 mb-4">
						Curated Women's Fashion
					</h2>
					<p class="text-lg text-gray-600 max-w-2xl mx-auto">
						From everyday essentials to statement pieces, discover
						fashion that empowers and inspires
					</p>
				</div>

				<!-- Filter & Products Grid -->
				<FilterableProductGrid
					allProducts={womensProducts}
					categories={womensCategories}
					colorScheme="pink"
					client:load
				/>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
