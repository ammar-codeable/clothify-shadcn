<Layout title="Kids Fashion - ShopVerse">
	<Header />

	<main
		class="min-h-screen bg-gradient-to-br from-emerald-50 via-white to-emerald-100"
	>
		<!-- Hero Banner -->
		<section
			class="relative bg-emerald-800 text-white py-20 overflow-hidden"
		>
			<div
				class="absolute inset-0 bg-[repeating-linear-gradient(60deg,_transparent,_transparent_20px,_rgba(255,255,255,0.03)_20px,_rgba(255,255,255,0.03)_40px)]"
			>
			</div>
			<div
				class="absolute inset-0 bg-[radial-gradient(circle_at_20%_70%,_rgba(16,185,129,0.12)_0%,_transparent_65%)]"
			>
			</div>
			<!-- Decorative Image -->
			<div
				class="absolute right-8 top-8 w-32 h-32 opacity-10 hidden lg:block"
			>
				<img
					src="https://images.unsplash.com/photo-1503454537195-1dcabb73ffb9?w=200&h=200&fit=crop"
					alt="Kids Fashion"
					class="w-full h-full object-cover rounded-full border-4 border-white/20"
				/>
			</div>
			<div
				class="absolute left-8 bottom-8 w-24 h-24 opacity-10 hidden lg:block"
			>
				<img
					src="https://images.unsplash.com/photo-1519457431-44ccd64ead8c?w=200&h=200&fit=crop"
					alt="Kids Fashion"
					class="w-full h-full object-cover rounded-full border-4 border-white/20"
				/>
			</div>
			<div class="container mx-auto px-4 relative z-10">
				<div class="max-w-4xl mx-auto text-center">
					<div class="flex justify-center mb-6">
						<div
							class="bg-white/5 backdrop-blur-sm rounded-full p-6 border border-white/10"
						>
							<i class="fas fa-child text-4xl text-emerald-300"
							></i>
						</div>
					</div>
					<h1 class="text-5xl md:text-7xl font-bold mb-6 text-white">
						Kids Collection
					</h1>
					<p
						class="text-xl md:text-2xl text-emerald-200 mb-8 font-light"
					>
						Fun, comfortable, and durable fashion designed for
						active little adventurers
					</p>
				</div>
			</div>
		</section>

		<!-- Products Section -->
		<section class="py-16">
			<div class="container mx-auto px-4">
				<!-- Filter & Products Grid -->
				<FilterableProductGrid
					allProducts={kidsProducts}
					categories={categories}
					colorScheme="emerald"
					client:load
				/>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
