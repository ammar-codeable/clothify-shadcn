---
import { FilterableProductGrid } from "../../components/FilterableProductGrid";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import Layout from "../../layouts/Layout.astro";
import { babiesProducts, babiesCategories } from "../../constants";
---

<Layout title="Baby Fashion - ShopVerse">
	<Header />

	<main
		class="min-h-screen bg-gradient-to-br from-orange-50 via-white to-orange-100"
	>
		<!-- Hero Banner -->
		<section
			class="relative bg-orange-800 text-white py-20 overflow-hidden"
		>
			<div
				class="absolute inset-0 bg-[repeating-conic-gradient(from_30deg_at_center,_transparent_0deg,_rgba(255,255,255,0.02)_60deg,_transparent_120deg,_rgba(255,255,255,0.02)_180deg)]"
			>
			</div>
			<div
				class="absolute inset-0 bg-[radial-gradient(circle_at_80%_20%,_rgba(251,146,60,0.12)_0%,_transparent_65%)]"
			>
			</div>
			<!-- Decorative Images -->
			<div
				class="absolute right-12 top-12 w-28 h-28 opacity-15 hidden lg:block"
			>
				<img
					src="https://images.unsplash.com/photo-1522771739844-6a9f6d5f14af?w=200&h=200&fit=crop"
					alt="Baby Fashion"
					class="w-full h-full object-cover rounded-full border-4 border-white/20"
				/>
			</div>
			<div
				class="absolute left-12 bottom-16 w-20 h-20 opacity-15 hidden lg:block"
			>
				<img
					src="https://images.unsplash.com/photo-1515488764276-beab7607c1e6?w=200&h=200&fit=crop"
					alt="Baby Fashion"
					class="w-full h-full object-cover rounded-full border-4 border-white/20"
				/>
			</div>
			<div
				class="absolute right-20 bottom-8 w-16 h-16 opacity-10 hidden lg:block"
			>
				<img
					src="https://images.unsplash.com/photo-1578662996442-48f60103fc96?w=200&h=200&fit=crop"
					alt="Baby Fashion"
					class="w-full h-full object-cover rounded-full border-3 border-white/15"
				/>
			</div>
			<div class="container mx-auto px-4 relative z-10">
				<div class="max-w-4xl mx-auto text-center">
					<div class="flex justify-center mb-6">
						<div
							class="bg-white/5 backdrop-blur-sm rounded-full p-6 border border-white/10"
						>
							<i class="fas fa-baby text-4xl text-orange-300"></i>
						</div>
					</div>
					<h1 class="text-5xl md:text-7xl font-bold mb-6 text-white">
						Baby Collection
					</h1>
					<p
						class="text-xl md:text-2xl text-orange-200 mb-8 font-light"
					>
						Gentle, safe, and adorable essentials crafted with love
						for your precious little one
					</p>
				</div>
			</div>
		</section>

		<!-- Products Section -->
		<section class="py-16">
			<div class="container mx-auto px-4">
				<!-- Filter & Products Grid -->
				<FilterableProductGrid
					allProducts={babiesProducts}
					categories={babiesCategories}
					client:load
				/>
			</div>
		</section>

		<Footer />
	</main>
</Layout>
